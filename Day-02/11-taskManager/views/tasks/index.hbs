<style>
    .completed{
        color : red;
        text-decoration : line-through;
        font-style : italic;
        font-weight : bold;
    }
</style>
<h1>Task Manager</h1>
<hr>
<h3>Task List</h3>
<ol>
    {{#each list}}
        <li>
           {{#if isCompleted}}
                <span class='completed'>{{name}}</span>
            {{else}}
                <span>{{name}}</span>
            {{/if}}
            - <a href="/tasks/toggle/{{id}}">X</a></li>
    {{/each}}
</ol>
<a href="/tasks/new">Create New</a>
